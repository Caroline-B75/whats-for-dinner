<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
<% Recipe.all.each do |recipe| %>
  <%= cl_image_tag recipe.photo.key, height: 300, width: 400, crop: :fill %>
  <h2><%= recipe.name %></h2>
  <% recipe.preparations.each do |preparation| %>
    <p><%= Ingredient.find(preparation.ingredient_id).name %> - <%= preparation.quantity %> <%= Ingredient.find(preparation.ingredient_id).unit %></p>
  <% end %>
  <h3><%= simple_format(recipe.content) %></h3>
<% end %>
