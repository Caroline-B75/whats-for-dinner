<div>
  <h1><%= @menu_recipe.recipe.name %></h1>
  <p><%= @menu_recipe.recipe.time %></p>
  <p><%= @menu_recipe.recipe.difficulty %></p>
  <p><%= @menu_recipe.recipe.price %></p>
  <p><%= simple_format(@menu_recipe.recipe.content) %></p>

  <%= form_for @menu_recipe do |f| %>
    <%= f.check_box :done, class: "check-done", onchange: "this.form.submit()"%>
    <%= f.label "Fait", {class: "checkbox inline"} %>
  <% end %>

  <div id="review-form">
    <%= render "reviews/new", menu_recipe: @menu_recipe, review: @review %>
  </div>

  <div>
    <ul>
      <% @menu_recipe.recipe.reviews.each do | review | %>
        <li><%= review.rating %>, <%= review.content %></li>
      <% end %>
    </ul>
  </div>
</div>
